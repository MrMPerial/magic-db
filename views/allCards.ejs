<%- include('header'); -%>

<% if (allCards.length > 0) { %>
  <div class="cardCount">
    <p><strong>Total Count:</strong> <%= count %></p>
    <p><strong>Total Value:</strong> $</p>
  </div>
<% } %>

<div class="row pad-top">
  <div class="col-12">
    <% if (allCards) { %>
    <div>
      <ul class="allCards">
        <% allCards.forEach(function(card){ %>
          <li>
            <img src="<%= card.imageUrl %>" alt="<%= card.cardName %>">
            <p><%= card.qty %></p>
            <div class="row">
              <div class="col-12 pad-top">
                <!-- View Card -->
                <form class="" action="/cards/viewCard" method="get">
                  <input type="hidden" name="viewCard" value="<%= card._id %>">
                  <button type="submit" class="btn btn-info d-flex aCbtn" name="button">View Card</button>
                </form>

                <!-- Delete Card -->
                <form class="" action="/cards/removeCard" method="post">
                  <input type="hidden" name="removeCard" value="<%= card._id %>">
                  <button type="submit" name="button" class="btn btn-danger d-flex dBtn">Delete Card</button>
                </form>
              </div>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
    <% } %>
  </div>
  <% if (allCards.length == 0) { %>
    <div class="row">
      <div class="col">

      </div>
      <div class="col-6">
        <h1 style="text-align: center;">You have not added any cards to your database yet. Click Find a Card in the menu to get started adding cards to your database.</h1>
      </div>

      <div class="col">

      </div>
    </div>
  <% } %>
</div>

<%- include('footer'); -%>
