<%- include('header'); -%>

<div class="container-fluid">


  <div class="row">
    <div class="col"></div>
    <div class="col-6">
      <h4>Add a new Card</h4>
      <form class="" ref="newCard" action="/cards/findCard" method="get">
        <div class="form-group">
          <input type="text" class="form-control" name="title" value="" placeholder="Card Title">
        </div>
        <button class="btn btn-success" type="submit" name="button">Find Your Card</button>
      </form>
    </div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"></div>
    <div class="col-6">
      <% if (card) { %>
      <h1>
        <%= card[0].name %>
      </h1>
      <img src="<%= card[0].imageUrl %>" alt="">
      <% } %>
    </div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"></div>
    <div class="col-6">
      <form class="" ref="newCard" action="/cards/addToDB" method="post">
        <div class="form-group">
          <input type="hidden" class="form-control" name="title" value="" placeholder="Card Title">
        </div>
        <button class="btn btn-success" type="submit" name="button">Add Your Card</button>
      </form>
    </div>
    <div class="col"></div>
  </div>

</div>

<%- include('footer'); -%>
